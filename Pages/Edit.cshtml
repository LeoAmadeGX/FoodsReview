@page
@model EditModel

@{
    ViewData["Title"] = "修改";
}

<h1>修改</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.Id" />
            <div class="form-group">
                <label asp-for="Review.Convenient" class="control-label"></label>
                <input asp-for="Review.Convenient" class="form-control" />
                <span asp-validation-for="Review.Convenient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.FoodName" class="control-label"></label>
                <input asp-for="Review.FoodName" class="form-control" />
                <span asp-validation-for="Review.FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Recorder" class="control-label"></label>
                <select asp-for="Review.Recorder" class="form-control">
                    <option value="Leo">Leo</option>
                    <option value="長勝">長勝</option>
                    <option value="Allen">Allen</option>
                    <option value="Top">Top</option>
                </select>
                <span asp-validation-for="Review.Recorder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Memo" class="control-label"></label>
                <input asp-for="Review.Memo" class="form-control" />
                <span asp-validation-for="Review.Memo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.RecordTime" class="control-label"></label>
                <input asp-for="Review.RecordTime" class="form-control" />
                <span asp-validation-for="Review.RecordTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
